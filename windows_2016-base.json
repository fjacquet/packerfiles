{
  "builders": [
    {
      "type": "vmware-iso",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": "{{user `headless`}}",
      "boot_wait": "2m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "output_directory": "./output-f-{{ user `os_name` }}-base/",
      "vm_name": "{{ user `os_name` }}-base",
      "guest_os_type": "windows8srv-64",
      "tools_upload_flavor": "windows",
      "disk_size": "{{user `disk_size`}}",
      "vnc_port_min": 5900,
      "vnc_port_max": 5980,
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/powershell/setup-proxy.ps1",
        "./scripts/batch/microsoft-updates.bat",
        "./scripts/powershell/install-openssh.ps1"
      ],
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900",
        "memsize": "{{user `memory_size`}}",
        "numvcpus": "{{user `cpus`}}",
        "scsi0.virtualDev": "lsisas1068"
      }
    },
    {
      "type": "virtualbox-iso",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": "{{user `headless`}}",
      "boot_wait": "2m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "output_directory": "./output-vb-{{ user `os_name` }}-base/",
      "vm_name": "{{ user `os_name` }}-base",
      "guest_additions_mode": "attach",
      "guest_os_type": "Windows2016_64",
      "hard_drive_interface": "sata",
      "hard_drive_nonrotational": "true",
      "disk_size": "{{user `disk_size`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/powershell/setup-proxy.ps1",
        "./scripts/batch/microsoft-updates.bat",
        "./scripts/powershell/install-openssh.ps1"
      ],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--nictype1",
          "82540EM"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpuhotplug",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--pae",
          "off"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--usbxhci",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory_size`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "48"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "inline": [
        "$env:chocolateyUseWindowsCompression = 'false'",
        "iwr https://chocolatey.org/install.ps1 -UseBasicParsing | iex"
      ]
    },
    {
      "type": "powershell",
      "script": "scripts/powershell/install-oracle_guest_additions.ps1"
    }
  ],
  "variables": {
    "iso_url": "http://care.dlservice.microsoft.com/dl/download/1/4/9/149D5452-9B29-4274-B6B3-5361DBDA30BC/14393.0.161119-1705.RS1_REFRESH_SERVER_EVAL_X64FRE_EN-US.ISO",
    "iso_checksum_type": "md5",
    "disk_size": "81920",
    "memory_size": "8192",
    "cpus": "4",
    "os_name": "win2016",
    "headless": "true",
    "iso_checksum": "70721288bbcdfe3239d8f8c0fae55f1f",
    "autounattend": "./answer_files/2016/Autounattend.xml"
  }
}