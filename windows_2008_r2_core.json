{
  "builders": [
    {
      "boot_wait": "2m",
      "disk_size": "{{user `disk_size`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/powershell/setup-proxy.ps1",
        "./scripts/batch/microsoft-updates.bat",
        "./scripts/powershell/install-openssh.ps1"
      ],
      "guest_os_type": "windows7srv-64",
      "headless": "{{user `headless`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "output_directory": "./output-f-{{ user `vm_name` }}/",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "8h",
      "tools_upload_flavor": "windows",
      "type": "vmware-iso",
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900",
        "memsize": "{{user `memory_size`}}",
        "numvcpus": "{{user `cpus`}}",
        "scsi0.virtualDev": "lsisas1068"
      },
      "vnc_port_max": 5980,
      "vnc_port_min": 5900
    },
    {
      "boot_wait": "2m",
      "disk_size": "{{user `disk_size`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/powershell/setup-proxy.ps1",
        "./scripts/batch/microsoft-updates.bat",
        "./scripts/powershell/install-openssh.ps1"
      ],
      "guest_os_type": "Windows2008_64",
      "headless": "{{user `headless`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "output_directory": "./output-vb-{{ user `vm_name` }}/",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "8h",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory_size`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ]
      ]
    },
    {
      "boot_wait": "2m",
      "disk_size": "{{user `disk_size`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/powershell/setup-proxy.ps1",
        "./scripts/batch/microsoft-updates.bat",
        "./scripts/powershell/install-openssh.ps1"
      ],
      "guest_os_type": "win-2008",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "parallels_tools_flavor": "win",
      "prlctl": [
        [
          "set",
          "{{.Name}}",
          "--memsize",
          "{{user `memory_size`}}"
        ],
        [
          "set",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ],
        [
          "set",
          "{{.Name}}",
          "--winsystray-in-macmenu",
          "off"
        ],
        [
          "set",
          "{{.Name}}",
          "--startup-view",
          "window"
        ],
        [
          "set",
          "{{.Name}}",
          "--efi-boot",
          "off"
        ]
      ],
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "2h",
      "type": "parallels-iso"
    }
  ],
  "post-processors": [
    {
      "inline": [
        "ovftool --acceptAllEulas --compress=9 --overwrite  ./output-f-{{ user `vm_name` }}/{{ user `vm_name` }}.vmx {{user `vm_name`}}.ova"
      ],
      "only": [
        "vmware-iso"
      ],
      "type": "shell-local"
    },
    {
      "inline": [
        "rm -rf ./output-f-{{ user `vm_name` }}/"
      ],
      "only": [
        "vmware-iso"
      ],
      "type": "shell-local"
    }
  ],
  "provisioners": [
    {
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "remote_path": "/tmp/script.bat",
      "scripts": [
        "./scripts/batch/setup-vm-guesttools.bat",
        "./scripts/batch/vagrant-ssh.bat",
        "./scripts/batch/enable-rdp.bat",
        "./scripts/batch/compact.bat"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "autounattend": "./answer_files/2008_r2_core/Autounattend.xml",
    "cpus": "2",
    "disk_size": "61440",
    "headless": "true",
    "iso_checksum": "4263be2cf3c59177c45085c0a7bc6ca5",
    "iso_checksum_type": "md5",
    "iso_url": "http://download.microsoft.com/download/7/5/E/75EC4E54-5B02-42D6-8879-D8D3A25FBEF7/7601.17514.101119-1850_x64fre_server_eval_en-us-GRMSXEVAL_EN_DVD.iso",
    "memory_size": "2048"
  }
}