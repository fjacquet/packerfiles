{
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "vpc_id": "{{user `aws_vpc_id`}}",
      "subnet_id": "{{user `aws_subnet_id`}}",
      "instance_type": "{{user `aws_instance_type`}}",
      "ami_name": "{{user `vm_name`}}",
      "ssh_username": "{{ user `aws_ssh_username` }}",
      "ssh_keypair_name": "{{user `ssh_keypair_name`}}",
      "ssh_agent_auth" :"true",
      "source_ami": "{{user `aws_source_ami`}}"
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab> linux text biosdevname=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/{{ user `kickstart` }}<enter><enter>"
      ],
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "{{ user `vmware_guest_os_type` }}",
      "output_directory": "./output-f-{{ user `vm_name` }}-base/",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "shutdown_command": "{{ user `shutdown_command` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "vm_name": "{{ user `vm_name` }}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}"
      }
    },
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> linux text biosdevname=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/{{ user `kickstart` }}<enter><enter>"
      ],
      "disk_size": "{{ user `disk_size` }}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "output_directory": "./output-vb-{{ user `vm_name` }}-base/",
      "guest_os_type": "{{ user `virtualbox_guest_os_type` }}",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "shutdown_command": "{{ user `shutdown_command` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `memory` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{ user `cpus` }}"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `vm_name` }}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/bash/sshd.sh",
        "scripts/bash/update.sh",
        "scripts/bash/vagrant.sh",
        "scripts/bash/virtualbox.sh",
        "scripts/bash/vmware.sh",
        "scripts/bash/custom-script.sh",
        "scripts/bash/cleanup.sh"
      ],
      "type": "shell",
      "expect_disconnect": "true"
    }
  ],
  "post-processors": [
    {
      "type": "shell-local",
      "only": [
        "vmware-iso"
      ],
      "inline": [
        "ovftool --acceptAllEulas --compress=9  ./output-f-{{ user `vm_name` }}-base/{{user `vm_name`}}.vmx {{user `vm_name`}}.ova"
      ]
    }
  ],
  "variables": {
    "headless": "true",
    "no_proxy": "{{env `no_proxy`}}",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "http_proxy": "{{env `http_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "iso_checksum": "e383dd414bb57231b20cbed11c4953cac71785f7d4f5990b0df5ad534a0ba95c",
    "iso_checksum_type": "sha256",
    "iso_name": "Fedora-Server-dvd-x86_64-27-1.6.iso",
    "iso_url": "http://fedora.inode.at/releases/27/Server/x86_64/iso/Fedora-Server-dvd-x86_64-27-1.6.iso",
    "kickstart": "ks-fedora27-server.cfg",
    "install_vagrant_key": "false",
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -h now",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "update": "false",
    "version": "0.1.0",
    "virtualbox_guest_os_type": "Fedora_64",
    "vmware_guest_os_type": "fedora-64",
    "vm_name": "fedora27-server",
    "cpus": "2",
    "memory": "4096",
    "disk_size": "65536",
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "eu-west-1",
    "aws_source_ami": "ami-bb9a6bc2",
    "aws_subnet_id": "subnet-06621e5d",
    "aws_vpc_id": "vpc-78050c1f",
    "aws_instance_type": "t2.micro",
    "ssh_keypair_name": "BCSD",
    "aws_ssh_username":"ec2-user"
  }
}